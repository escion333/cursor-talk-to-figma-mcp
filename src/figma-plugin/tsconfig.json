{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "outDir": "../../dist/plugin",
    "rootDir": ".",
    "lib": ["ES2020"],
    "types": ["@figma/plugin-typings"],
    "typeRoots": ["../../node_modules/@types", "../../node_modules/@figma"]
  },
  "include": ["./**/*.ts", "../shared/**/*.ts"],
  "exclude": ["node_modules"]
}

